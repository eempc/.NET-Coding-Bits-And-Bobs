}

@foreach (var item in Model.SomeIList) {
  <img src="@Url.Content(item.GetImageUrl(Model.RootPath))"
}
       
public string GetImageUrl(string rootPath) {
    string relativePath = $@"images/{Property}.svg".ToLower();
    string fullPath = Path.Combine(rootPath, relativePath);

    if (File.Exists(fullPath)) {
        return @"~/" + relativePath;
    }
    return $@"~/images/image.png".ToLower();
}
